#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zephyr,display = &oled;
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7)
            RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15)
        >;
    };

    left_kscan: kscan_left {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios
            = <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            ;
    };

    right_kscan: kscan_right {
        compatible = "zmk,kscan-gpio-direct";
        input-gpios
            = <&gpio0 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio1 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            , <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>
            ;
    };
};

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Split 8-Key Direct Wire";
        transform = &default_transform;
    };

    chosen {
        zmk,matrix-transform = &default_transform;
    };

    direct_pins_left: direct_pins_left {
        compatible = "zmk,matrix-direct";
        gpios = <
            &gpio0 17 GPIO_ACTIVE_LOW
            &gpio0 20 GPIO_ACTIVE_LOW
            &gpio0 22 GPIO_ACTIVE_LOW
            &gpio0 24 GPIO_ACTIVE_LOW
            &gpio1 0 GPIO_ACTIVE_LOW
            &gpio0 11 GPIO_ACTIVE_LOW
            &gpio0 4 GPIO_ACTIVE_LOW
            &gpio1 4 GPIO_ACTIVE_LOW
        >;
    };

    direct_pins_right: direct_pins_right {
        compatible = "zmk,matrix-direct";
        gpios = <
            &gpio0 2 GPIO_ACTIVE_LOW
            &gpio0 29 GPIO_ACTIVE_LOW
            &gpio0 31 GPIO_ACTIVE_LOW
            &gpio1 11 GPIO_ACTIVE_LOW
            &gpio1 13 GPIO_ACTIVE_LOW
            &gpio0 15 GPIO_ACTIVE_LOW
            &gpio0 9 GPIO_ACTIVE_LOW
            &gpio0 10 GPIO_ACTIVE_LOW
        >;
    };

    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <8>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)   RC(0,3) RC(0,4) RC(0,5)   RC(0,6)   RC(0,7)
        >;
    };
};

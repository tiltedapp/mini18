            &gpio0 4 GPIO_ACTIVE_HIGH  // S7
            &gpio1 4 GPIO_ACTIVE_HIGH  // S8
        >;
    };

    direct_pins_right: direct_pins_right {
        compatible = "zmk,matrix-direct";
        gpios = <
            &gpio0 2 GPIO_ACTIVE_HIGH  // S9
            &gpio0 29 GPIO_ACTIVE_HIGH // S10
            &gpio0 31 GPIO_ACTIVE_HIGH // S11
            &gpio1 11 GPIO_ACTIVE_HIGH // S12
            &gpio1 13 GPIO_ACTIVE_HIGH // S13
